{
  "compilerOptions": {
      "moduleResolution": "NodeNext",
      "target": "ESNext", // Use "ESNext" to target the latest ECMAScript version
      "module": "NodeNext", // Output ES modules
      "outDir": "./dist", // Specify the output directory
      "rootDir": "./src", // Specify the root directory of your TypeScript files
      "esModuleInterop": true, // Enable interop with CommonJS (allows using import/export together with require/module.exports)
      "resolveJsonModule": true, // Enable importing .json files
      "strict": true, // Enable all strict type-checking options
      "skipLibCheck": true, // Skip type checking all .d.ts files
      "baseUrl": "./", // Base directory to resolve non-relative module names
      "paths": {
          "*": ["src/*"] // Map all imports to the "src" directory
      }
  },
  "include": [
      "src/**/*.ts", // Include TypeScript files in the "src" directory and its subdirectories
      "src/**/*.d.ts", // Include TypeScript declaration files (if any)
  ],
  "exclude": [
      "node_modules" // Exclude the "node_modules" directory from TypeScript compilation
  ]
}